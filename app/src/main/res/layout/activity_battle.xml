<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.knowware.aw.spellfight1.BattleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintVertical_bias="0.991"
        android:id="@+id/textView" />

    <ProgressBar
        android:id="@+id/healthpb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginBottom="99dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:max="100"
        android:maxHeight="41dp"
        android:progress="0"
        android:progressTint="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1" />

    <ProgressBar
        android:id="@+id/manapb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="0"
        android:maxHeight="20dp"
        android:progressTint="#0000FF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthpb" />

    <ProgressBar
        android:id="@+id/xppb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="#ffdf00"
        android:layout_width="361dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginStart="8dp"
        android:max="100"
        android:progress="0"
        android:maxHeight="20dp" />

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:contentDescription=""
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/btn_default" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
